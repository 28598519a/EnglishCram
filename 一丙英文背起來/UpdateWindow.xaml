<Window x:Class="一丙英文背起來.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:一丙英文背起來"
        mc:Ignorable="d"
        Title="更新通知" Height="300" Width="600" Closed="UpdateWindow_Closed">
    <Grid>
        <Button x:Name="btn_ok" Content="知道了" HorizontalAlignment="Left" Margin="217,193,0,0" VerticalAlignment="Top" Width="135" Height="45" Click="Btn_ok_Click"/>
        <Label x:Name="lb_ServerVersion" Content="最新版本號 : " HorizontalAlignment="Left" Margin="48,84,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label x:Name="lb_ReleaseUrl" Content="下載點 : " HorizontalAlignment="Left" Margin="48,135,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="偵測到有可用的更新!" HorizontalAlignment="Left" Margin="179,30,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <Label HorizontalAlignment="Left" Margin="124,135,0,0" VerticalAlignment="Top" FontSize="16">
            <Hyperlink x:Name="hlk_ReleaseUrl" FontSize="16" MouseEnter="Hlk_MouseEnter" Foreground="Blue" MouseLeave="Hlk_MouseLeave" Click="Hlk_Click" NavigateUri="">
                <TextBlock x:Name="tb_ReleaseUrl"></TextBlock>
            </Hyperlink>
        </Label>
    </Grid>
</Window>