<Window x:Class="一丙英文背起來.DownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:一丙英文背起來"
        mc:Ignorable="d"
        Title="DownloadWindow" Height="45" Width="220.255" WindowStyle="None" Loaded="DownloadWindow_Loaded">

    <Grid>
        <ProgressBar x:Name="pb_DownLoad" HorizontalAlignment="Left" Height="20" Margin="3,6,0,0" VerticalAlignment="Top" Width="155"/>
        <Label x:Name="lb_Percent" Content="" HorizontalAlignment="Left" Margin="163,4,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_DLfinish" Content="下載完成" HorizontalAlignment="Left" Margin="45,44,0,0" VerticalAlignment="Top" Width="75" Visibility="Collapsed" Click="Btn_DLfinish_Click">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD" Opacity="0.5"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>