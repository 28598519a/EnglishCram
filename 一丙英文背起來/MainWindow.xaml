<Window x:Class="一丙英文背起來.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:一丙英文背起來"
        mc:Ignorable="d"
        Title="一丙英文背起來 ( Ver 0.1Beta )" Height="450" Width="750" Closed="Window_Closed">
    <Grid>
        <Label Content="測試：" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lb_tpd" Content="107360715" HorizontalAlignment="Left" Margin="58,0,0,0" VerticalAlignment="Top"/>

        <TabControl x:Name="tbc_main" Height="344" Margin="0,76,2,0" VerticalAlignment="Top" >
            <TabItem Header="一般" Width="80">
                <Grid Background="#FFE5E5E5">
                    <GroupBox Header="測驗選項" HorizontalAlignment="Left" Height="45" Margin="539,30,0,0" VerticalAlignment="Top" Width="185" FontSize="14" Foreground="Black"/>
                    <GroupBox Header="出題模式" HorizontalAlignment="Left" Height="47" Margin="539,87,0,0" VerticalAlignment="Top" Width="185" FontSize="14"/>
                    <GroupBox Header="保留" HorizontalAlignment="Left" Height="75" Margin="539,147,0,0" VerticalAlignment="Top" Width="185" FontSize="14"/>
                    <GroupBox Header="保留" HorizontalAlignment="Left" Height="45" Margin="539,232,0,0" VerticalAlignment="Top" Width="185" FontSize="14"/>

                    <TextBox x:Name="tb_Answer" HorizontalAlignment="Left" Height="25
                             " Margin="211,87,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="265" IsEnabled="False"/>
                    <TextBox x:Name="tb_Again1" HorizontalAlignment="Left" Height="25" Margin="211,181,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="265" IsEnabled="False"/>
                    <Label Content="題目 :" HorizontalAlignment="Left" Margin="161,40,0,0" VerticalAlignment="Top" FontSize="16"/>
                    <CheckBox x:Name="cb_tpa" Content="Temp" HorizontalAlignment="Left" Margin="553,172,0,0" VerticalAlignment="Top"/>
                    <RadioButton GroupName="ResType" x:Name="rb_Random" Content="隨機" HorizontalAlignment="Left" Margin="553,110,0,0" VerticalAlignment="Top" IsChecked="True" RenderTransformOrigin="-0.357,0.676"/>
                    <RadioButton GroupName="ResType" x:Name="rb_Order" Content="依序" HorizontalAlignment="Left" Margin="630,110,0,0" VerticalAlignment="Top" IsChecked="True"/>

                    <Button x:Name="btn_test_start" Content="開始測驗" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="123" Click="btn_test_start_Click" Height="86" FontSize="24"/>
                    <RadioButton GroupName="catchdataType" x:Name="rb_Answer_Cht" Content="回答中文" HorizontalAlignment="Left" Margin="553,50,0,0" VerticalAlignment="Top" IsChecked="True"/>
                    <RadioButton GroupName="catchdataType" x:Name="rb_Answer_Eng" Content="回答英文" HorizontalAlignment="Left" Margin="630,50,0,0" VerticalAlignment="Top" IsChecked="True"/>
                    <CheckBox x:Name="cb_tpc" Content="Temp" HorizontalAlignment="Left" Margin="553,254,0,0" VerticalAlignment="Top"/>
                    <CheckBox x:Name="cb_tpb" Content="Temp" HorizontalAlignment="Left" Margin="553,195,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="tb_Again2" HorizontalAlignment="Left" Height="25" Margin="211,216,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="265" IsEnabled="False"/>
                    <TextBox x:Name="tb_Again3" HorizontalAlignment="Left" Height="25" Margin="211,251,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="265" IsEnabled="False"/>
                    <Button x:Name="btn_test_stop" Content="停止測驗" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="123" Click="btn_test_stop_Click" Height="86" FontSize="24" Visibility="Hidden"/>
                    <Label x:Name="lb_Question" Content="" HorizontalAlignment="Left" Margin="216,40,0,0" VerticalAlignment="Top" FontSize="16"/>
                    <Button x:Name="btn_Answer" Content="送出" HorizontalAlignment="Left" Margin="153,87,0,0" VerticalAlignment="Top" Width="53" Height="25" Click="btn_Answer_Click" IsEnabled="False"/>
                    <Label x:Name="lb_AnswerCheck" Content="" HorizontalAlignment="Left" Margin="211,117,0,0" VerticalAlignment="Top" Width="265" Height="59" FontSize="14"/>
                    <Button x:Name="btn_Again1" Content="送出" HorizontalAlignment="Left" Margin="153,181,0,0" VerticalAlignment="Top" Width="53" Height="25" Click="btn_Again1_Click" IsEnabled="False"/>
                    <Button x:Name="btn_Again2" Content="送出" HorizontalAlignment="Left" Margin="153,215,0,0" VerticalAlignment="Top" Width="53" Height="25" Click="btn_Again2_Click" IsEnabled="False"/>
                    <Button x:Name="btn_Again3" Content="送出" HorizontalAlignment="Left" Margin="153,250,0,0" VerticalAlignment="Top" Width="53" Height="25" Click="btn_Again3_Click" IsEnabled="False"/>
                    <Label Content="練習 :" HorizontalAlignment="Left" Margin="161,147,0,0" VerticalAlignment="Top" FontSize="16"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="tbi_db" Header="資料庫"  Width="80">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="btn_load_res_list" Content="選擇題庫載入列表" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="26" Margin="10,58,0,0" Click="btn_load_res_list_Click" Grid.ColumnSpan="3" />
                    <ListView x:Name="lv_res_list" HorizontalAlignment="Left" Height="282" Margin="349,10,0,0" VerticalAlignment="Top" Width="361">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="中文" Width="175" DisplayMemberBinding="{Binding NameCht}" />
                                <GridViewColumn Header="英文" Width="175" DisplayMemberBinding="{Binding NameEng}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <GroupBox Header="保留" HorizontalAlignment="Left" Height="58" Margin="10,234,0,0" VerticalAlignment="Top" Width="200"/>
                    <Label x:Name="lb_dabaotime" Content="Temp：" HorizontalAlignment="Left" VerticalAlignment="Top" Height="24" Margin="0,2,0,0" Width="70" />
                    <Button x:Name="btn_Default_db" Content="使用預設題庫" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Width="200" Click="btn_Default_db_Click" Height="26"/>
                    <CheckBox x:Name="cb_download_ext" Content="Temp" HorizontalAlignment="Left" Margin="22,264,0,0" VerticalAlignment="Top" Height="16" Width="173"/>
                    <Label x:Name="lb_dabaotimetxt" Content="" HorizontalAlignment="Left" Margin="60,2,0,308" />
                    <Label Content="資料筆數：" HorizontalAlignment="Left" VerticalAlignment="Top" Height="24" Margin="0,26,0,0" Width="70" />
                    <Label x:Name="lb_dabaotimetxt_Copy" Content="" HorizontalAlignment="Left" Margin="60,2,0,286" />
                    <Label x:Name="lb_lsCount" Content="" HorizontalAlignment="Left" Margin="70,27,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>